<h1>Admin Deck</h1>

<h2><%= @admin_deck.name %></h2>
<h4>Level: <%= @admin_deck.level %></h4>

<table>
    <tbody>
        <tr>
            <td>ENGLISH:</td>
            <td>SPANISH:</td>
        </tr>

        <% @admin_deck.cards.map do |card| %>
            <tr>
                <td><%= card.english %></td>
                <td><%= card.spanish %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<br><br>

<button><%= link_to "Edit Set", edit_admin_deck_path(@admin_deck) %></button>

<br><br>
    
<button>
    <%= link_to "Delete Set", @admin_deck, method: 'delete', data: { confirm: "Are you sure?" } %>
</button>

<br><br>
  
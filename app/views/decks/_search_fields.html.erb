<%= form_tag '/decks/scoped', method: 'post' do %>
  
    <label>Approved: </label>
    <%= select_tag 'admin_approved', options_for_select(["Admin Approved", "Not Admin Approved" ]), include_blank: "All" %><br>

<%# create Level model, and then use those instances for select_tag %>
    <label>Level: </label>
    <%= select_tag 'level', options_for_select(["1", "2", "3", "4", "5", "6", "7"]), include_blank: "All" %><br>

    <label>User: </label>
    <%= select_tag 'user_id', options_for_select(@users.collect{ |u| [u.name, u.id] }), include_blank: "All" %><br>
    
    <br>
    
    <%= submit_tag "Search Decks" %>

<% end %>
